{
  "manifest_version": 3,
  "name": "Jump Jump",
  "version": "1.0",
  "description": "Redirect specific URL to new URL",
  "homepage_url": "https://github.com/g-tmp/jumpjump",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"] // service_worker on chrome
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "action": {
    "default_title": "Jump action",
    "default_popup": "options/options.html"
  },

  "icons": {
    "48": "Luci.png"
  }

}